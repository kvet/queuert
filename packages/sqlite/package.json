{
  "name": "@queuert/sqlite",
  "version": "0.2.0",
  "description": "SQLite adapter for Queuert job queue system",
  "keywords": [
    "background-jobs",
    "job-queue",
    "queue",
    "sqlite",
    "task-queue",
    "typescript"
  ],
  "license": "MIT",
  "author": "kvet",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvet/queuert.git"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./testing": "./src/testing.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.mjs",
      "./testing": "./dist/testing.mjs",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsdown",
    "typecheck": "! tsgo --noEmit 2>&1 | grep -v 'specs/.*TS4023' | grep 'error TS'",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@queuert/tsconfig": "workspace:*",
    "@queuert/typed-sql": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.4",
    "better-sqlite3": "^12.6.2",
    "queuert": "workspace:*"
  },
  "peerDependencies": {
    "queuert": "workspace:*"
  }
}
