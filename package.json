{
  "name": "queuert-monorepo",
  "private": true,
  "keywords": [],
  "license": "MIT",
  "author": "kvet",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "oxlint --type-aware",
    "fmt": "oxlint --type-aware --fix && oxfmt",
    "fmt:check": "oxfmt --check",
    "test": "vitest",
    "typecheck": "pnpm -r typecheck",
    "examples": "pnpm -r --filter \"./examples/*\" start",
    "check": "pnpm fmt:check && pnpm lint && pnpm build && pnpm typecheck && vitest --run && pnpm examples",
    "modules:clean": "rm -rf $(find . -name node_modules -type d)",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.17.0"
}
